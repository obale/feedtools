source :rubygems

# Declare your gem's dependencies in semantic_crawler.gemspec.
# Bundler will treat runtime dependencies like base dependencies, and
# development dependencies will be added by default to the :development group.
gemspec

gem 'activerecord'
gem 'uuidtools', '>= 1.0.0'
gem 'builder', '>= 1.2.4'

group :dev do
    gem 'jeweler'
    gem 'sqlite3'
    gem 'tidy'
    gem 'rake'
end

